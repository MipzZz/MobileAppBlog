<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Fragments.TestResultFrag">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/result_title"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtResultScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/result_score"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txtResultTitle"
        app:layout_constraintStart_toStartOf="@+id/txtResultTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtResultTitle" />

    <Button
        android:id="@+id/btTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/buttonBackground"
        android:text="@string/btn_try_again"
        app:layout_constraintEnd_toEndOf="@+id/txtResultScore"
        app:layout_constraintStart_toStartOf="@+id/txtResultScore"
        app:layout_constraintTop_toBottomOf="@+id/txtResultScore" />

</androidx.constraintlayout.widget.ConstraintLayout>